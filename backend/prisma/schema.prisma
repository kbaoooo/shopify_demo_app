generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Shop {
  id          Int       @id @default(autoincrement())
  shopDomain  String    @unique
  accessToken String
  isInstalled Boolean   @default(true)
  uninstallAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  countdownTimers CountdownTimer[]
}

model CountdownTimer {
  id     Int  @id @default(autoincrement())
  shopId Int
  shop   Shop @relation(fields: [shopId], references: [id])

  name    String     @default("Default timer")
  message String     @default("Hurry up! Offer ends soon.")
  type    TimmerType @default(FIXED)

  startAt          DateTime?
  endAt            DateTime?
  evergreenMinutes Int?
  position         TimerPosition @default(TOP_BAR)

  bgColor   String      @default("#111827")
  textColor String      @default("#F9FAFB")
  status    TimerStatus @default(INACTIVE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([shopId, name])
}

enum TimmerType {
  FIXED
  EVERGREEN
}

enum TimerPosition {
  TOP_BAR
  BOTTOM_BAR
  PRODUCT_PAGE
  CART_PAGE
}

enum TimerStatus {
  ACTIVE
  INACTIVE
}
